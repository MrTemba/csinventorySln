@model LoginModel
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CS Inventory</title>
    <link href="~/lib/bootstrap-4.6.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet"/>
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">CS INVENTORY LOGIN</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap card p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-200">
                                <div class="text-danger" asp-validation-summary="All"></div>
                            </div>
                        </div>
                        <form asp-action="Login" class="login-form" asp-controller="Account" method="post">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><i class="bi bi-file-person"></i></div>
                                <div asp-validation-for="Name" class="text-danger"></div>
                                <input asp-for="Name" type="text" class="form-control rounded-left" placeholder="Username" required/>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><i class="bi bi-lock"></i></div>
                                <div asp-validation-for="Password" class="text-danger"></div>
                                <input asp-for="Password" type="password" class="form-control rounded-left" placeholder="Password" required/>
                            </div>
                            <div class="form-group d-flex align-items-center">
                                <div class="w-100">
                                    <div class="w-100">
                                        <a href="/" class="btn btn-outline-dark"><i class="bi bi-arrow-bar-left"></i></a>
                                    </div>
                                </div>
                                <div class="w-100 d-flex justify-content-end">
                                    <button class="btn btn-outline-primary rounded submit" type="submit">Login</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


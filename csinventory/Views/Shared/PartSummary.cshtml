@model PartsListViewModel
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Parts Summary</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>NAME</th>
                            <th>DESCRIPTION</th>
                            <th>REWORKABLE</th>
                            <th>QUANTITY</th>
                            <th>PART NUMBER</th>
                            <th>UNIT COST</th>
                            <th>TOTAL COST</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.Parts)
                        {
                            <tr>
                                <td>@p.Name</td>
                                <td>@p.Description</td>
                                <td>@(p.ReWorkable?"Yes":"No")</td>
                                <td>
                                    @p.Quantity
                                </td>
                                <td>@p.PartNumber</td>
                                <td>@p.UnitCost.ToString("c", CultureInfo.CreateSpecificCulture("en-ZM"))</td>
                                <td>@((p.UnitCost * p.Quantity).ToString("c", CultureInfo.CreateSpecificCulture("en-ZM")))</td>
                            </tr>
                        }
                    </tbody>
                    </table>
                </div>
        </div>
    </div>

